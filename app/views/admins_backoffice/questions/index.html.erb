  <h1>Questions</h1>
  <p>Find me in app/views/Questions_backoffice/Questions/index.html.erb</p>

  <div>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th scope="col">Id</th>
          <th scope="col">Assunto</th>
          <th scope="col">Referência</th>
          <th scope="col">Criado</th>
          <th scope="col">
            <%= link_to 'Create Question', new_admins_backoffice_question_path, class: "btn btn-info" %>
          </th>
        </tr>
      </thead>
      <tbody>
        <% @question.each do |question| %>
        <tr>
          <td><%= question.id %></td>
          <td><%= question.description %></td>
          <td><%= question.subject.description %></td>
          <td><%= question.created_at.strftime("%d/%m/%Y %H:%M") %></td>
          <td style=" width: 158px" >
              <%= link_to 'Edit', edit_admins_backoffice_question_path(question), class: "btn btn-info" %>
              <%= button_to 'Delete',
                admins_backoffice_question_path(question),
                method: :delete,
                data: { confirm: "Tem certeza que deseja deletar esta questão?" },
                class: "btn btn-danger",
                form: { style: "display:inline" } %>
            </td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <div class="d-flex justify-content-center">
      <%= paginate @question %>
  </div>
