<% if @subject.errors.any? %>
  <div class="alert alert-danger d-flex align-items-center" role="alert">
    <svg class="bi flex-shrink-0 me-2" role="img" aria-label="Danger:"><use xlink:href="#exclamation-triangle-fill"/></svg>
    <div>
      <%= @subject.errors.full_messages.join(", ") %>
    </div>
  </div>
<% end %>

<%= form_with(model: [ :admins_backoffice, @subject ], local: true) do |form| %>
  <div class="mb-3">
    <%= form.label :description, "Description", class: "form-label", for: "formGroupExampleInput" %>
    <%= form.text_field :description, class: "form-control", id: "formGroupExampleInput", placeholder: "Description" %>
  </div>
  <div class="col-12">
    <%= form.submit "Edit", class: "btn btn-primary" %>
  </div>
<% end %>

