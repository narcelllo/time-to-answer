<body>
  <div class="p-4 mb-3 bg-body-tertiary rounded-3"> 
    <div class="d-flex gap-5 align-items-center">
      <div class="card" style="width: 18rem;">
        <%= image_tag(profile_img, class: "card-img-top") %>
        <div class="card-body">
          <h5 class="card-title"><%= @user.full_name %></h5>
          <div class="d-grid gap-2">
            <%= link_to 'Edit profile', users_backoffice_profile_path, class: "btn btn-primary" %>
          </div>
        </div>
      </div>
      <div>
        <p class="fs-1">Total answereds <%= @user_statistic.total_questions%></p>
        <p class="fs-1">Right Answers <%= @user_statistic.right_questions%></p>
        <p class="fs-1">Wrong Questions <%= @user_statistic.wrong_questions%></p>
      </div>
    </div>
  </div>
</body>
